{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["dom", "es2015"],
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,  
      "allowSyntheticDefaultImports": true  
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  